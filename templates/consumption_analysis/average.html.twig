{% extends 'base.html.twig' %}

{% block title %}Average Consumption Analysis{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Average Consumption: {{ meter.name }}</h1>
            <div>
                <a href="{{ path('app_consumption_analysis_index') }}" class="btn btn-secondary">Back to Analysis</a>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">Meter Information</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p><strong>Name:</strong> {{ meter.name }}</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Type:</strong> {{ meter.type }}</p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Location:</strong> {{ meter.location ?: 'Not specified' }}</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h2 class="h5 mb-0">Average Consumption</h2>
            </div>
            <div class="card-body">
                {% if weeklyAverage is null and monthlyAverage is null and quarterlyAverage is null %}
                    <div class="alert alert-info">
                        Not enough readings to calculate average consumption. Please add at least two readings with different dates.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Period</th>
                                    <th>Average Consumption</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Weekly</td>
                                    <td>
                                        {% if weeklyAverage is not null %}
                                            {{ weeklyAverage|number_format(2) }} {% if meter.type == 'electricity' %}kWh{% elseif meter.type == 'gas' %}m³{% elseif meter.type == 'water' %}m³{% endif %}
                                        {% else %}
                                            <span class="text-muted">Not available</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Monthly</td>
                                    <td>
                                        {% if monthlyAverage is not null %}
                                            {{ monthlyAverage|number_format(2) }} {% if meter.type == 'electricity' %}kWh{% elseif meter.type == 'gas' %}m³{% elseif meter.type == 'water' %}m³{% endif %}
                                        {% else %}
                                            <span class="text-muted">Not available</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Quarterly</td>
                                    <td>
                                        {% if quarterlyAverage is not null %}
                                            {{ quarterlyAverage|number_format(2) }} {% if meter.type == 'electricity' %}kWh{% elseif meter.type == 'gas' %}m³{% elseif meter.type == 'water' %}m³{% endif %}
                                        {% else %}
                                            <span class="text-muted">Not available</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            Note: Averages are calculated based on the first and last reading for this meter.
                            For accurate results, ensure that readings are entered regularly.
                        </small>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}