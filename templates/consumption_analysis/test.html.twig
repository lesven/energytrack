{% extends 'base.html.twig' %}

{% block title %}Form Test{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Form Test Page</h1>
            <div>
                <a href="{{ path('app_consumption_analysis_index') }}" class="btn btn-secondary">Back to Analysis</a>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Test Form</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('app_consumption_analysis_test', {'id': meter.id}) }}">
                            <div class="mb-3">
                                <label for="testValue" class="form-label">Test Value</label>
                                <input type="text" id="testValue" name="testValue" class="form-control" 
                                       value="Test value" required>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Submit Test</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Form Submit Result</h2>
                    </div>
                    <div class="card-body">
                        {% if result %}
                            <div class="alert alert-success">
                                {{ result }}
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                No form submitted yet.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}